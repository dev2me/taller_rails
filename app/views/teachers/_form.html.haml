= form_for @teacher do |f|
  - if @teacher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@teacher.errors.count, "error")} prohibited this teacher from being saved:"
      %ul
        - @teacher.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre, "Nombre del Profesor"
    = f.text_field :nombre, class: "input-field validate"
  .field
    = f.label :apat, "Apellido Paterno"
    = f.text_field :apat
  .field
    = f.label :edad, "Edad"
    = f.number_field :edad
  .field
    = f.label :materia, "Materia"
    = f.text_field :materia
  .actions
    = f.submit 'Guardar', class: "btn waves-effect waves-light"
